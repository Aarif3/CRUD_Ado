@model IEnumerable<CRUD_APPLICATION.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.Raw(TempData["Message"])

<p>
    @Html.ActionLink("Create New", "Create","Category")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        @if(item.IsActive)
        {
        <td>
            <button>
                @Html.ActionLink("DeActives", "DeActivecat", new { id = item.Id })
            </button>

        </td>

        <td>
            <button>
                @Html.ActionLink("ProductList", "ShowProToCat", new { id = item.Id })
            </button>

        </td>
        <td>
            <button>
                @Html.ActionLink("Addproduct", "ShowAddProduct", new { id = item.Id })
            </button>

        </td>
        }
        else
        {
    <td>
        <Button class="btn-success">
            @Html.ActionLink("Active", "ActiveCategory", new { id = item.Id })
        </Button>
    </td>
        
        }    
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
